@using Dominio.Entidades

@model List<Miembro>
@* miembros que le mandaron solicitud pendientes de aceptar o rechazar *@

<h2>Solicitudes Pendientes</h2>

@if (Model.Count == 0)
{
    <p>No hay solicitudes pendientes.</p>
}
else
{
    <div>
        <h3>Miembros con Solicitudes Pendientes de Aprobación</h3>
        @foreach (Miembro miembro in Model)
        {
                <div>
                    <span>Nombre: @miembro.Nombre</span>
                    <span>Apellido: @miembro.Apellido</span>
                    <a href="/Amigos/AceptarSolicitud?email=@miembro.Email">Aprobar Solicitud</a>
                    <a href="/Amigos/RechazarSolicitud?email=@miembro.Email">Rechazar Solicitud</a>
                </div>
        }
    </div>
}
