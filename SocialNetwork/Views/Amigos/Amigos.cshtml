@using Dominio.Entidades;

@model List<Miembro>;
@* La lista de miembros que llega a la vista son los amigos del usuario logueado *@

<div>
    @if (Model.Count == 0)
    {
        <h2 class="alert-danger text-center">No tienes amigos actualmente.</h2>
    }
    else
    {
        @foreach (Miembro amigos in Model)
        {
            <div>
                <span>Nombre: @amigos.Nombre</span>
                <span>Apellido: @amigos.Apellido</span>
                <span>Email: @amigos.Email</span>
            </div>
        }
    }

</div>