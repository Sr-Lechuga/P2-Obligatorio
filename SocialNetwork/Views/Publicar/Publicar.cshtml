@using Dominio.Entidades;

@model Publicacion;

<div class="post-container">
    <h2 class="text-center">Crear Publicación</h2>

    <form method="post" action="/Publicar/Publicar" class="post-container">
        <label>Título:</label>
        <input type="text" name="Titulo" required />

        <label>Imagen (URL):</label>
        <input type="url" name="ImagenUrl" />

        <label>Contenido:</label>
        <textarea name="Contenido" rows="4" required></textarea>

        <label>Visibilidad:</label>
        <select name="EsPublico" required>
            <option value="true">Público</option>
            <option value="false">Privado</option>
        </select>

        <input type="submit" value="Publicar" />
    </form>
</div>

